<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/back"
    android:orientation="vertical">

    <include layout="@layout/view_titlebar"></include>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/shape_item_back"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_setting_help_conflict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_switch_conflict_tips"
            android:textColor="@android:color/black"
            android:textSize="16.0sp" />

        <ToggleButton
            android:id="@+id/tb_setting_help_conflict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:button="@drawable/btn_toggle_xml"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_margin="5dp"
        android:background="@drawable/shape_item_back"
        android:padding="5dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_setting_help_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_switch_highlight_tips"
            android:textColor="@android:color/black"
            android:textSize="16.0sp" />

        <ToggleButton
            android:id="@+id/tb_setting_help_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:button="@drawable/btn_toggle_xml"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_setting_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_switch_sound"
            android:textColor="@android:color/black"
            android:textSize="14.0sp" />

        <ToggleButton
            android:id="@+id/tb_setting_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:button="@drawable/btn_toggle_xml"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:id="@+id/rl_auto_fill"
        android:layout_margin="5dp"
        android:background="@drawable/shape_item_back"
        android:padding="5dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_setting_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_switch_complete"
            android:textColor="@android:color/black"
            android:textSize="16.0sp" />

        <ToggleButton
            android:id="@+id/tb_setting_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:button="@drawable/btn_toggle_xml"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:background="@drawable/shape_item_back"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_version"
            android:textColor="@android:color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/tv_setting_current_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="16.0sp"
            android:gravity="center_vertical"
            android:text="1.0.0" />
    </RelativeLayout>
</LinearLayout>
