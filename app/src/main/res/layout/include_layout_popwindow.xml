<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_popwindow_solute"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_menu_view"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_btn_selector"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/main_popwindow_again"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/main_popwindow_solute"
        android:src="@mipmap/ic_perm_group_sync_settings"
        android:background="@drawable/bg_btn_selector"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/main_popwindow_setting"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/main_popwindow_solute"
        android:src="@mipmap/ic_menu_manage"
        android:background="@drawable/bg_btn_selector"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/main_popwindow_help"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/main_popwindow_again"
        android:layout_toRightOf="@+id/main_popwindow_setting"
        android:src="@mipmap/ic_menu_help"
        android:background="@drawable/bg_btn_selector"
        android:layout_height="wrap_content" />





</RelativeLayout>
