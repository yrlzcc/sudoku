        android:background="@drawable/bg_btn_selector"
        android:gravity="center"
        android:text="4"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/main_include_select_5"
        android:layout_margin="1dp"
        android:textSize="28dp"
        android:padding="5dp"
        android:background="@drawable/bg_btn_selector"
        android:layout_width="wrap_content"
        android:text="5"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/main_include_select_6"
        android:layout_margin="1dp"
        android:textSize="28dp"
        android:background="@drawable/bg_btn_selector"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:gravity="center"
        android:text="6"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/main_include_select_7"
        android:layout_margin="1dp"
        android:textSize="28dp"
        android:background="@drawable/bg_btn_selector"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:text="7"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/main_include_select_8"
        android:layout_margin="1dp"
        android:textSize="28dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:background="@drawable/bg_btn_selector"
        android:gravity="center"
        android:text="8"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/main_include_select_9"
        android:layout_margin="1dp"
        android:textSize="28dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/bg_btn_selector"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:text="9"
        android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_color_select"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:id="@+id/main_include_color_select_1"
            android:background="@color/mode_color_1"
            android:layout_width="wrap_content"
            android:layout_margin="1dp"
            android:textSize="28dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/main_include_color_select_2"
            android:background="@color/mode_color_2"
            android:layout_width="wrap_content"
            android:layout_margin="1dp"
            android:textSize="28dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="28dp"
            android:background="@color/mode_color_3"
            android:id="@+id/main_include_color_select_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
