            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_include_color_select_5"
            android:layout_margin="1dp"
            android:textSize="28dp"
            android:padding="5dp"
            android:background="@color/mode_color_5"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_include_color_select_6"
            android:layout_margin="1dp"
            android:textSize="28dp"
            android:background="@color/mode_color_6"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_include_color_select_7"
            android:layout_margin="1dp"
            android:textSize="28dp"
            android:background="@color/mode_color_7"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_include_color_select_8"
            android:layout_margin="1dp"
            android:textSize="28dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:background="@color/mode_color_8"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_include_color_select_9"
            android:layout_margin="1dp"
            android:textSize="28dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/mode_color_9"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
